    <!--endregion-->

    <!--region init-->
    <customPhase>
        <customPhaseCommandClass>
            zzk.townshipscheduler.backend.scheduling.algorithm.TownshipInitiateCustomPhase
        </customPhaseCommandClass>
    </customPhase>
    <!--    endregion-->

    <!--region local search-->
    <localSearch>

        <termination>
            <diminishedReturns>
                <slidingWindowSeconds>45</slidingWindowSeconds>
                <minimumImprovementRatio>0.01</minimumImprovementRatio>
            </diminishedReturns>
        </termination>

        <unionMoveSelector>

            <changeMoveSelector>
                <filterClass>
                    zzk.townshipscheduler.backend.scheduling.algorithm.ProducingArrangementPlanningFactoryChangeMoveSelectionFilter
                </filterClass>
                <entitySelector id="localSearch_changeMoveSelector_es_Arrangement_planningFactory">
                    <entityClass>
                        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                    </entityClass>
                </entitySelector>
                <valueSelector variableName="planningFactoryInstance"
                               id="localSearch_changeMoveSelector_vs_Arrangement_planningFactory">
                </valueSelector>
            </changeMoveSelector>

            <changeMoveSelector>
                <entitySelector id="localSearch_changeMoveSelector_es_Arrangement_planningQueuedDateTime">
                    <entityClass>
                        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                    </entityClass>
                </entitySelector>
                <valueSelector variableName="planningQueuedDateTime"
                               id="localSearch_changeMoveSelector_vs_Arrangement_planningQueuedDateTime">
                </valueSelector>
            </changeMoveSelector>

            <swapMoveSelector>
                <entitySelector id="localSearch_swapMoveSelector_es_Arrangement_planningQueuedDateTime_p">
                    <entityClass>
                        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                    </entityClass>
                </entitySelector>
                <secondaryEntitySelector id="localSearch_swapMoveSelector_es_Arrangement_planningQueuedDateTime_q">
                    <entityClass>
                        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                    </entityClass>
                </secondaryEntitySelector>
                <variableNameIncludes>
                    <variableNameInclude>planningQueuedDateTime</variableNameInclude>
                </variableNameIncludes>
            </swapMoveSelector>

            <pillarChangeMoveSelector>
                <pillarSelector>
                    <entitySelector id="localSearch_pillarChangeMoveSelector_es_Arrangement_planningQueuedDateTime">
                        <entityClass>
                            zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                        </entityClass>
                    </entitySelector>
                </pillarSelector>
                <valueSelector variableName="planningQueuedDateTime"
                               id="localSearch_pillarChangeMoveSelector_vs_Arrangement_planningQueuedDateTime">
                </valueSelector>
            </pillarChangeMoveSelector>

            <pillarSwapMoveSelector>
                <pillarSelector>
                    <entitySelector id="localSearch_pillarSwapMoveSelector_es_Arrangement_planningQueuedDateTime_p">
                        <entityClass>
                            zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                        </entityClass>
                    </entitySelector>
                </pillarSelector>
                <secondaryPillarSelector>
                    <entitySelector id="localSearch_pillarSwapMoveSelector_es_Arrangement_planningQueuedDateTime_q">
                        <entityClass>
                            zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
                        </entityClass>
                    </entitySelector>
                </secondaryPillarSelector>
                <variableNameIncludes>
                    <variableNameInclude>planningQueuedDateTime</variableNameInclude>
                </variableNameIncludes>
            </pillarSwapMoveSelector>

        </unionMoveSelector>

        <acceptor>
            <entityTabuSize>3</entityTabuSize>
            <valueTabuSize>3</valueTabuSize>
            <stepCountingHillClimbingSize>257</stepCountingHillClimbingSize>
            <stepCountingHillClimbingType>ACCEPTED_MOVE</stepCountingHillClimbingType>
        </acceptor>

        <forager>
            <acceptedCountLimit>2</acceptedCountLimit>
        </forager>

    </localSearch>
    <!--endregion-->

</solver>
