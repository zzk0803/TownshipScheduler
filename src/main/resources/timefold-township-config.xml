<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://timefold.ai/xsd/solver"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://timefold.ai/xsd/solver https://timefold.ai/xsd/solver/solver.xsd"
>
    <environmentMode>FULL_ASSERT</environmentMode>

    <solutionClass>zzk.townshipscheduler.backend.scheduling.model.TownshipSchedulingProblem</solutionClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingArrangementOrFactorySlot
    </entityClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
    </entityClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingFactoryInstanceDateTimeSlot
    </entityClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingArrangementsGlobalState
    </entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>
            zzk.townshipscheduler.backend.scheduling.score.TownshipSchedulingConstraintProvider
        </constraintProviderClass>
    </scoreDirectorFactory>

    <!--region constructionHeuristic-->
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
        <changeMoveSelector>
            <valueSelector variableName="planningPreviousProducingArrangement"
                           id="constructionHeuristic_changeMoveSelector_vs_Arrangement_planningPreviousProducingArrangement">
            </valueSelector>
        </changeMoveSelector>
    </constructionHeuristic>
    <!--endregion-->

    <!--region init-->
    <!--    <customPhase>-->
    <!--        <customPhaseCommandClass>-->
    <!--            zzk.townshipscheduler.backend.scheduling.algorithm.TownshipInitiateCustomPhase-->
    <!--        </customPhaseCommandClass>-->
    <!--    </customPhase>-->
    <!--endregion-->

    <!--region local search-->
    <localSearch>

        <termination>
            <diminishedReturns>
                <slidingWindowSeconds>30</slidingWindowSeconds>
                <minimumImprovementRatio>0.01</minimumImprovementRatio>
            </diminishedReturns>
        </termination>

        <unionMoveSelector>
            <tailChainSwapMoveSelector/>
            <subChainChangeMoveSelector/>
            <tailChainSwapMoveSelector/>
        </unionMoveSelector>

        <acceptor>
            <stepCountingHillClimbingSize>369</stepCountingHillClimbingSize>
            <stepCountingHillClimbingType>STEP</stepCountingHillClimbingType>
        </acceptor>

        <forager>
            <acceptedCountLimit>2</acceptedCountLimit>
        </forager>

    </localSearch>
    <!--endregion-->

</solver>
