    <!--region init-->
    <customPhase>
        <customPhaseCommandClass>
            zzk.townshipscheduler.backend.scheduling.algorithm.TownshipInitiateCustomPhase
        </customPhaseCommandClass>
    </customPhase>
    <!--    endregion-->

    <!--region local search-->
    <localSearch>

        <termination>
            <diminishedReturns>
                <slidingWindowSeconds>45</slidingWindowSeconds>
                <minimumImprovementRatio>0.01</minimumImprovementRatio>
            </diminishedReturns>
        </termination>

        <unionMoveSelector>

            <listChangeMoveSelector>
                <filterClass>
                    zzk.townshipscheduler.backend.scheduling.algorithm.ProducingArrangementPlanningFactoryListChangeMoveSelectionFilter
                </filterClass>
            </listChangeMoveSelector>

        </unionMoveSelector>

        <acceptor>
            <fadingEntityTabuSize>8</fadingEntityTabuSize>
            <fadingValueTabuSize>15</fadingValueTabuSize>
            <stepCountingHillClimbingSize>369</stepCountingHillClimbingSize>
            <stepCountingHillClimbingType>ACCEPTED_MOVE</stepCountingHillClimbingType>
        </acceptor>

        <forager>
            <acceptedCountLimit>3</acceptedCountLimit>
        </forager>

    </localSearch>
    <!--endregion-->

</solver>
