    <!--region init-->
    <customPhase>
        <customPhaseCommandClass>
            zzk.townshipscheduler.backend.scheduling.algorithm.TownshipInitiateCustomPhase
        </customPhaseCommandClass>
    </customPhase>
    <!--endregion-->

    <!--region local search-->
    <localSearch>

        <termination>
            <diminishedReturns>
                <slidingWindowSeconds>30</slidingWindowSeconds>
                <minimumImprovementRatio>0.01</minimumImprovementRatio>
            </diminishedReturns>
        </termination>

        <unionMoveSelector>
            <listChangeMoveSelector/>
            <listSwapMoveSelector/>
            <subListChangeMoveSelector/>
            <subListSwapMoveSelector/>
            <kOptListMoveSelector/>
        </unionMoveSelector>

        <acceptor>
            <stepCountingHillClimbingSize>369</stepCountingHillClimbingSize>
            <stepCountingHillClimbingType>STEP</stepCountingHillClimbingType>
        </acceptor>

        <forager>
            <acceptedCountLimit>2</acceptedCountLimit>
        </forager>

    </localSearch>
