<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://timefold.ai/xsd/solver"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://timefold.ai/xsd/solver https://timefold.ai/xsd/solver/solver.xsd"
>

    <enablePreviewFeature>DIVERSIFIED_LATE_ACCEPTANCE</enablePreviewFeature>

    <environmentMode>TRACKED_FULL_ASSERT</environmentMode>

    <randomSeed>42</randomSeed>

    <solutionClass>zzk.townshipscheduler.backend.scheduling.model.TownshipSchedulingProblem</solutionClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingProducingArrangement
    </entityClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingFactoryInstance
    </entityClass>
    <entityClass>
        zzk.townshipscheduler.backend.scheduling.model.SchedulingFactoryInstanceDateTimeSlot
    </entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>
            zzk.townshipscheduler.backend.scheduling.score.TownshipSchedulingConstraintProvider
        </constraintProviderClass>
    </scoreDirectorFactory>

    <!--region init-->
    <customPhase>
        <customPhaseCommandClass>
            zzk.townshipscheduler.backend.scheduling.algorithm.TownshipInitiateCustomPhase
        </customPhaseCommandClass>
    </customPhase>
    <!--endregion-->

    <!--region local search-->
    <localSearch>

        <termination>
            <diminishedReturns>
                <slidingWindowSeconds>30</slidingWindowSeconds>
                <minimumImprovementRatio>0.01</minimumImprovementRatio>
            </diminishedReturns>
        </termination>

        <unionMoveSelector>

            <listChangeMoveSelector>
                <filterClass>
                    zzk.townshipscheduler.backend.scheduling.algorithm.ProducingArrangementPlanningFactoryListChangeMoveSelectionFilter
                </filterClass>
            </listChangeMoveSelector>

        </unionMoveSelector>

        <acceptor>
            <fadingEntityTabuSize>7</fadingEntityTabuSize>
            <fadingValueTabuSize>5</fadingValueTabuSize>
            <stepCountingHillClimbingSize>369</stepCountingHillClimbingSize>
            <stepCountingHillClimbingType>ACCEPTED_MOVE</stepCountingHillClimbingType>
        </acceptor>

        <!--        <acceptor>-->
        <!--            <acceptorType>DIVERSIFIED_LATE_ACCEPTANCE</acceptorType>-->
        <!--            <lateAcceptanceSize>7</lateAcceptanceSize>-->
        <!--        </acceptor>-->

        <forager>
            <acceptedCountLimit>3</acceptedCountLimit>
        </forager>

    </localSearch>
    <!--endregion-->

</solver>
