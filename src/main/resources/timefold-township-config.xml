<?xml version="1.0" encoding="UTF-8"?>
<solver xmlns="https://timefold.ai/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://timefold.ai/xsd/solver https://timefold.ai/xsd/solver/solver.xsd">

    <environmentMode>FAST_ASSERT</environmentMode>
    <randomSeed>42</randomSeed>

    <solutionClass>zzk.townshipscheduler.backend.scheduling.model.TownshipSchedulingProblem</solutionClass>
    <entityClass>zzk.townshipscheduler.backend.scheduling.model.AbstractPlayerProducingArrangement</entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>
            zzk.townshipscheduler.backend.scheduling.score.TownshipSchedulingConstraintProvider
        </constraintProviderClass>
    </scoreDirectorFactory>

    <constructionHeuristic>
        <constructionHeuristicType>ALLOCATE_ENTITY_FROM_QUEUE</constructionHeuristicType>
        <entitySorterManner>DECREASING_DIFFICULTY_IF_AVAILABLE</entitySorterManner>
        <valueSorterManner>DECREASING_STRENGTH_IF_AVAILABLE</valueSorterManner>
        <cartesianProductMoveSelector>
            <changeMoveSelector>
                <valueSelector variableName="planningDateTimeSlot"/>
            </changeMoveSelector>
            <changeMoveSelector>
                <valueSelector variableName="planningSequence"/>
            </changeMoveSelector>
        </cartesianProductMoveSelector>
    </constructionHeuristic>

    <localSearch>
    </localSearch>

</solver>
